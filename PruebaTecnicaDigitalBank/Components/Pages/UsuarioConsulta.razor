@page "/usuarios"
@rendermode InteractiveServer

<PageTitle>Consulta de Usuarios</PageTitle>

<div class="usuarios-container">
    <div class="usuarios-card">
        <h1 class="usuarios-title">Consulta de Usuarios</h1>

        <div class="mb-4 d-flex justify-content-between align-items-center flex-wrap gap-2">
            <a href="/" class="btn btn-home">
                <i class="bi bi-house-door"></i> Inicio
            </a>
            <a href="/usuario/insertar" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Usuario
            </a>
        </div>

        @if (isLoading)
        {
            <p class="loading-text"><em>Cargando...</em></p>
        }
        else if (usuarios == null || !usuarios.Any())
        {
            <p class="no-data-text">No hay usuarios registrados.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Fecha de Nacimiento</th>
                            <th>Sexo</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var usuario in usuarios)
                        {
                            <tr>
                                <td>@usuario.Id</td>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @switch (usuario.Sexo)
                                    {
                                        case "M":
                                            <text>Masculino</text>
                                            break;
                                        case "F":
                                            <text>Femenino</text>
                                            break;
                                        case "O":
                                            <text>Otro</text>
                                            break;
                                        default:
                                            <text>@usuario.Sexo</text>
                                            break;
                                    }
                                </td>
                                <td>
                                    <a href="/usuario/@usuario.Id" class="btn btn-sm btn-warning me-2">Editar</a>
                                    <button class="btn btn-sm btn-danger" @onclick="() => ConfirmarEliminar(usuario.Id, usuario.Nombre)">Eliminar</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        @if (mostrarConfirmacion)
        {
            <div class="modal show d-block" tabindex="-1" role="dialog" style="background-color: rgba(0,0,0,0.7);">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content modal-dark">
                        <div class="modal-header">
                            <h5 class="modal-title">Confirmar Eliminación</h5>
                            <button type="button" class="btn-close btn-close-white" @onclick="CancelarEliminar"></button>
                        </div>
                        <div class="modal-body">
                            <p>¿Está seguro que desea eliminar al usuario <strong>@usuarioAEliminarNombre</strong>?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" @onclick="CancelarEliminar">Cancelar</button>
                            <button type="button" class="btn btn-danger" @onclick="EliminarUsuario">Eliminar</button>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (!string.IsNullOrEmpty(mensaje))
        {
            <div class="alert @(mensajeExito ? "alert-success" : "alert-danger") mt-3" role="alert">
                @mensaje
            </div>
        }
    </div>
</div>

<style>
